<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// SearchHeader template //-->
  <template class="SearchHeader" parent="GtkBox">
    <property name="width-request">860</property>
    <property name="by-name">true</property>
    <child>
      <object class="GtkStack" id="stack">
        <child>
          <object class="GtkStackPage" id="title_page">
            <property name="name">title</property>
            <property name="child">
              <object class="AdwWindowTitle" id="title_widget"/>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage" id="search_page">
            <property name="name">search</property>
            <property name="child">
              <object class="GtkBox" id="search_box">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="hexpand">True</property>
                    <signal name="search-started" handler="on_search_started" swapped="true"/>
                    <!-- <signal name="stop-search" handler="on_search_stopped" swapped="no"/> -->
                    <signal name="search-changed" handler="on_search_changed" swapped="true"/>
                    <child>
                      <object class="GtkImage" id="filter_image">
                        <property name="margin-start">6</property>
                        <property name="icon-name">funnel-symbolic</property>
                        <child>
                          <object class="GtkGestureClick">
                            <property name="button">1</property>
                            <signal name="pressed" handler="on_filter_image_clicked" swapped="true"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkPopoverMenu" id="filter_popover">
                            <property name="menu-model">search_menu</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="searchtag_box">
                        <property name="valign">center</property>
                        <child>
                          <object class="SearchTag" id="searchtag_any">
                            <property name="text">any</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_all">
                            <property name="text">all</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_exact">
                            <property name="text">exact</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSeparator">
                            <property name="margin-start">3</property>
                            <property name="margin-end">3</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_name">
                            <property name="text">name</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_desc">
                            <property name="text">desc</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_group">
                            <property name="text">group</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_deps">
                            <property name="text">deps</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_optdeps">
                            <property name="text">optdeps</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_provides">
                            <property name="text">provides</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="SearchTag" id="searchtag_files">
                            <property name="text">files</property>
                            <property name="can-close">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>

  <!--// Search menu //-->
  <menu id="search_menu">
    <section>
      <attribute name="label">Search By</attribute>
      <item>
        <attribute name="label">Name</attribute>
        <attribute name="action">search.toggle-name</attribute>
      </item>
      <item>
        <attribute name="label">Description</attribute>
        <attribute name="action">search.toggle-desc</attribute>
      </item>
      <item>
        <attribute name="label">Group</attribute>
        <attribute name="action">search.toggle-group</attribute>
      </item>
      <item>
        <attribute name="label">Dependencies</attribute>
        <attribute name="action">search.toggle-deps</attribute>
      </item>
      <item>
        <attribute name="label">Optional Dependencies</attribute>
        <attribute name="action">search.toggle-optdeps</attribute>
      </item>
      <item>
        <attribute name="label">Provides</attribute>
        <attribute name="action">search.toggle-provides</attribute>
      </item>
      <item>
        <attribute name="label">Files</attribute>
        <attribute name="action">search.toggle-files</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Select All</attribute>
        <attribute name="action">search.selectall</attribute>
      </item>
      <item>
        <attribute name="label">Reset</attribute>
        <attribute name="action">search.reset</attribute>
      </item>
    </section>
    <section>
      <attribute name="label">Search Mode</attribute>
      <item>
        <attribute name="label">Match All Terms</attribute>
        <attribute name="action">search.toggle-mode</attribute>
        <attribute name="target">all</attribute>
      </item>
      <item>
        <attribute name="label">Match Any Term</attribute>
        <attribute name="action">search.toggle-mode</attribute>
        <attribute name="target">any</attribute>
      </item>
      <item>
        <attribute name="label">Exact Match</attribute>
        <attribute name="action">search.toggle-mode</attribute>
        <attribute name="target">exact</attribute>
      </item>
    </section>
  </menu>
</interface>
