<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// CacheWindow template //-->
  <template class="CacheWindow" parent="AdwWindow">
    <property name="default-width">900</property>
    <property name="default-height">640</property>
    <property name="modal">true</property>
    <property name="hide-on-close">true</property>
    <property name="title"></property>
    <property name="content">
      <object class="AdwToolbarView" id="toolbar_view">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <child>
              <object class="GtkBox" id="header_box">
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">20</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkImage" id="header_image">
                    <property name="valign">center</property>
                    <property name="icon-name">info-cache-symbolic</property>
                    <style>
                      <class name="bubble"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="header_label">
                    <property name="xalign">0</property>
                    <property name="yalign">0.5</property>
                    <property name="label">Pacman Cache</property>
                    <style>
                      <class name="title-3"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox" id="control_box">
                <property name="valign">center</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-end">6</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="margin-end">14</property>
                    <property name="placeholder-text">Search for files</property>
                    <style>
                      <class name="round"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkToggleButton" id="signature_button">
                    <property name="icon-name">info-signed-symbolic</property>
                    <property name="tooltip-text">Show Signature Files</property>
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="open_button">
                    <property name="icon-name">folder-open-symbolic</property>
                    <property name="tooltip-text">Open Cache Folder</property>
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="copy_button">
                    <property name="icon-name">edit-copy-symbolic</property>
                    <property name="tooltip-text">Copy File List</property>
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkStack" id="stack">
            <style>
              <class name="card"/>
            </style>
            <property name="margin-top">12</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <child>
              <object class="GtkStackPage">
                <property name="name">view</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="child">
                      <object class="GtkColumnView" id="view">
                        <style>
                          <class name="card-list"/>
                        </style>
                        <property name="margin-bottom">16</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="tab-behavior">item</property>
                        <property name="model">
                          <object class="GtkSingleSelection" id="selection">
                            <property name="model">
                              <object class="GtkFilterListModel" id="filter_model">
                                <property name="filter">
                                  <object class="GtkEveryFilter">
                                    <child>
                                      <object class="GtkStringFilter" id="search_filter">
                                        <property name="expression">
                                          <lookup name="path" type="CacheObject"/>
                                        </property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkCustomFilter" id="signature_filter">
                                      </object>
                                    </child>
                                  </object>
                                </property>
                                <property name="model">
                                  <object class="GListStore" id="model">
                                    <property name="item-type">CacheObject</property>
                                  </object>
                                </property>
                              </object>
                            </property>
                          </object>
                        </property>
                        <child>
                          <object class="GtkColumnViewColumn">
                            <property name="title">Cache File</property>
                            <property name="expand">true</property>
                            <property name="factory">
                              <object class="GtkBuilderListItemFactory">
                                <property name="resource">/com/github/PacView/ui/cache_window/cache_item.ui</property>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="AdwStatusPage" id="empty_status">
                    <property name="icon-name">edit-find-symbolic</property>
                    <property name="title">No Cache Files Found</property>
                    <style>
                      <class name="compact"/>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <child type="bottom">
          <object class="GtkBox">
            <property name="margin-start">28</property>
            <property name="margin-end">28</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">10</property>
            <property name="spacing">36</property>
            <child>
              <object class="GtkLabel" id="footer_label">
                <property name="hexpand">true</property>
                <property name="xalign">0</property>
                <style>
                  <class name="caption-heading"/>
                  <class name="dimmed"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="size_label">
                <property name="xalign">1</property>
                <style>
                  <class name="caption-heading"/>
                  <class name="dimmed"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
