<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// MAIN WINDOW //-->
  <template class="PacViewWindow" parent="AdwApplicationWindow">
    <signal name="show" handler="on_show_window" swapped="no"/>
    <!-- <signal name="close-request" handler="on_close" swapped="no"/> -->
    <property name="default-width">1450</property>
    <property name="default-height">800</property>
    <property name="content">
      <object class="GtkBox" id="window_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="title-widget">
              <object class="SearchHeader" id="search_header">
                <property name="title">PacView</property>
                <property name="key-capture-widget">pkgview</property>
                <signal name="search-changed" handler="on_search_changed" swapped="true"/>
              </object>
            </property>
            <child type="start">
              <object class="GtkToggleButton" id="sidebar_button">
                <property name="icon-name">sidebar-show-symbolic</property>
                <property name="tooltip-text">Toggle sidebar</property>
                <!-- <property name="action-name">win.show-sidebar</property> -->
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="mainmenu_button">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="primary">True</property>
                <property name="tooltip-text">Main menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="infopane_buttin">
                <property name="icon-name">sidebar-show-right-symbolic</property>
                <property name="tooltip-text">Toggle info pane</property>
                <!-- <property name="action-name">win.show-infopane</property> -->
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="search_button">
                <property name="active">False</property>
                <property name="icon-name">edit-find-symbolic</property>
                <property name="tooltip-text">Toggle search</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwFlap" id="flap">
            <property name="flap">
              <object class="GtkBox" id="flap_box">
                <style>
                  <class name="background"/>
                </style>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">True</property>
                    <property name="child">
                      <object class="GtkBox" id="sidebar_box">
                        <property name="width-request">200</property>
                        <property name="orientation">vertical</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <child>
                          <object class="GtkLabel" id="repo_header">
                            <property name="label">Repository</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="margin-top">6</property>
                            <property name="margin-bottom">6</property>
                            <style>
                              <class name="heading"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkListBox" id="repo_listbox">
                            <property name="margin-bottom">6</property>
                            <signal name="row-selected" handler="on_repo_selected" swapped="true"/>
                            <style>
                              <class name="navigation-sidebar"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSeparator">
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="status_header">
                            <property name="label">Package Status</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">6</property>
                            <style>
                              <class name="heading"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkListBox" id="status_listbox">
                            <signal name="row-selected" handler="on_status_selected" swapped="true"/>
                            <style>
                              <class name="navigation-sidebar"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
            <property name="separator">
              <object class="GtkSeparator"/>
            </property>
            <property name="content">
              <object class="GtkPaned" id="pane">
                <property name="orientation">vertical</property>
                <property name="wide-handle">True</property>
                <!-- <property name="position">375</property> -->
                <property name="shrink-start-child">False</property>
                <property name="shrink-end-child">False</property>
                <property name="start-child">
                  <object class="GtkOverlay">
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>
                        <child>
                          <object class="GtkColumnView" id="pkgview">
                            <property name="model">
                              <object class="GtkSingleSelection" id="pkgview_selection">
                                <property name="model">
                                  <object class="GtkSortListModel" id="pkgview_sort_model">
                                    <property name="model">
                                      <object class="GtkFilterListModel" id="pkgview_filter_model">
                                        <property name="filter">
                                          <object class="GtkEveryFilter" id="pkgview_main_filter">
                                            <child>
                                              <object class="GtkStringFilter" id="pkgview_repo_filter">
                                                <property name="expression">
                                                  <lookup name="repository" type="PkgObject"/>
                                                </property>
                                                <property name="match-mode">exact</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkCustomFilter" id="pkgview_status_filter"/>
                                            </child>
                                            <child>
                                              <object class="GtkCustomFilter" id="pkgview_search_filter"/>
                                            </child>
                                          </object>
                                        </property>
                                        <property name="model">
                                          <object class="GListStore" id="pkgview_model">
                                            <property name="item-type">PkgObject</property>
                                          </object>
                                        </property>
                                      </object>
                                    </property>
                                    <binding name="sorter">
                                      <lookup name="sorter">pkgview</lookup>
                                    </binding>
                                  </object>
                                </property>
                              </object>
                            </property>
                            <!-- <child>
                              <object class="GtkGestureClick" id="click_gesture">
                                <property name="button">0</property>
                              </object>
                            </child> -->
                            <!-- <child>
                              <object class="GtkPopoverMenu" id="popover_menu">
                                <property name="menu-model">popup_menu</property>
                                <property name="has-arrow">False</property>
                                <property name="halign">start</property>
                              </object>
                            </child> -->
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_package_column">
                                <property name="id">package</property>
                                <property name="title">Package</property>
                                <property name="resizable">True</property>
                                <property name="expand">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/package-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkStringSorter">
                                    <property name="expression">
                                      <lookup name="name" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_version_column">
                                <property name="id">version</property>
                                <property name="title">Version</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/version-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkStringSorter">
                                    <property name="expression">
                                      <lookup name="version" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_repository_column">
                                <property name="id">repository</property>
                                <property name="title">Repository</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/repository-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkStringSorter">
                                    <property name="expression">
                                      <lookup name="repository" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_status_column">
                                <property name="id">status</property>
                                <property name="title">Status</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/status-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkStringSorter">
                                    <property name="expression">
                                      <lookup name="status" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_date_column">
                                <property name="id">date</property>
                                <property name="title">Date</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/date-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkNumericSorter">
                                    <property name="expression">
                                      <lookup name="install_date" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_size_column">
                                <property name="id">size</property>
                                <property name="title">Size</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/size-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkNumericSorter">
                                    <property name="expression">
                                      <lookup name="install_size" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkColumnViewColumn" id="pkgview_group_column">
                                <property name="id">group</property>
                                <property name="title">Group</property>
                                <property name="resizable">True</property>
                                <!-- <property name="header-menu">header_menu</property> -->
                                <property name="factory">
                                  <object class="GtkBuilderListItemFactory">
                                    <property name="resource">/com/github/PacView/ui/columnview/groups-item.ui</property>
                                  </object>
                                </property>
                                <property name="sorter">
                                  <object class="GtkStringSorter">
                                    <property name="expression">
                                      <lookup name="groups" type="PkgObject"/>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>

                  <!-- <object class="PkgColumnView" id="column_view">
                    <property name="height-request">150</property>
                  </object> -->
                </property>
                <!-- <property name="end-child">
                  <object class="PkgInfoPane" id="info_pane">
                    <property name="height-request">150</property>
                  </object>
                </property> -->
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkSeparator"/>
        </child>
        <child>
          <object class="GtkBox" id="status_box">
            <property name="margin-start">18</property>
            <property name="margin-end">18</property>
            <property name="margin-top">8</property>
            <property name="margin-bottom">8</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel" id="status_label">
                <property name="xalign">0</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>

  <!--// PRIMARY MENU //-->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label">Refresh</attribute>
        <!-- <attribute name="action">win.refresh-packages</attribute> -->
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Show Statistics</attribute>
        <!-- <attribute name="action">win.show-stats-window</attribute> -->
      </item>
      <item>
        <attribute name="label">Copy List</attribute>
        <!-- <attribute name="action">win.copy-package-list</attribute> -->
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">View Sidebar</attribute>
        <!-- <attribute name="action">win.show-sidebar</attribute> -->
      </item>
      <item>
        <attribute name="label">View Info Pane</attribute>
        <!-- <attribute name="action">win.show-infopane</attribute> -->
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Preferences</attribute>
        <!-- <attribute name="action">win.show-preferences</attribute> -->
      </item>
      <item>
        <attribute name="label">Keyboard Shortcuts</attribute>
        <!-- <attribute name="action">win.show-help-overlay</attribute> -->
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">About PacView</attribute>
        <!-- <attribute name="action">app.show-about</attribute> -->
      </item>
    </section>
  </menu>

  <!--// PREFERENCES WINDOW //-->
  <!-- <object class="PreferencesWindow" id="prefs_window">
  </object> -->
</interface>
