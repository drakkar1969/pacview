<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// MAIN WINDOW //-->
  <template class="MainWindow" parent="AdwApplicationWindow">
    <property name="title">PacView</property>
    <property name="default_width">1200</property>
    <property name="default_height">700</property>
    <property name="content">
      <object class="GtkBox" id="window_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar">
            <child type="start">
              <object class="GtkToggleButton" id="header_sidebar_btn">
                <property name="icon-name">sidebar-show-symbolic</property>
                <property name="active">True</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon_name">open-menu-symbolic</property>
                <property name="primary">True</property>
                <property name="menu_model">primary_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkToggleButton" id="header_search_btn">
                <property name="icon-name">edit-find</property>
                <property name="active">False</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwFlap">
            <property name="reveal-flap" bind-source="header_sidebar_btn" bind-property="active" bind-flags="sync-create|bidirectional"/>
            <property name="flap">
              <object class="GtkBox">
                <style>
                  <class name="background"/>
                </style>
                <child>
                  <object class="GtkBox">
                    <property name="width_request">200</property>
                    <property name="orientation">vertical</property>
                    <property name="margin_start">6</property>
                    <property name="margin_end">6</property>
                    <property name="margin_top">12</property>
                    <property name="margin_bottom">12</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Repository</property>
                        <property name="halign">start</property>
                        <property name="margin_start">6</property>
                        <property name="margin_end">6</property>
                        <property name="margin_top">6</property>
                        <property name="margin_bottom">6</property>
                        <style>
                          <class name="heading"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox" id="repo_listbox">
                        <property name="margin_bottom">12</property>
                        <signal name="row-selected" handler="on_repo_selected" swapped="no"/>
                        <style>
                          <class name="navigation-sidebar"/>
                        </style>
                        <child>
                          <object class="SidebarListBoxRow" id="repo_listbox_all">
                            <property name="icon_name">package-x-generic-symbolic</property>
                            <property name="label_text">All</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Package Status</property>
                        <property name="halign">start</property>
                        <property name="margin_start">6</property>
                        <property name="margin_end">6</property>
                        <property name="margin_top">18</property>
                        <property name="margin_bottom">6</property>
                        <style>
                          <class name="heading"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox" id="status_listbox">
                        <signal name="row-selected" handler="on_status_selected" swapped="no"/>
                        <style>
                          <class name="navigation-sidebar"/>
                        </style>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_all">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">All</property>
                            <property name="int_selection">31</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_installed">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Installed</property>
                            <property name="int_selection">15</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_explicit">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Explicit</property>
                            <property name="int_selection">1</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_dependency">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Dependency</property>
                            <property name="int_selection">2</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_optional">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Optional</property>
                            <property name="int_selection">4</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_orphan">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Orphan</property>
                            <property name="int_selection">8</property>
                          </object>
                        </child>
                        <child>
                          <object class="SidebarListBoxRow" id="status_listbox_none">
                            <property name="icon_name">view-filter</property>
                            <property name="label_text">Not Installed</property>
                            <property name="int_selection">16</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="separator">
              <object class="GtkSeparator"/>
            </property>
            <property name="content">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkSearchBar" id="search_bar">
                    <property name="search-mode-enabled" bind-source="header_search_btn" bind-property="active" bind-flags="sync-create|bidirectional"/>
                    <property name="key-capture-widget">pkg_columnview</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkSearchEntry" id="search_entry">
                            <property name="width-request">400</property>
                            <property name="placeholder-text">Search for packages</property>
                            <signal name="search-changed" handler="on_search" swapped="no"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkMenuButton">
                            <property name="icon_name">view-filter</property>
                            <property name="menu_model">search_menu</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="PkgColumnView" id="pkg_columnview"/>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>

  <!--// PRIMARY MENU //-->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label">Refresh Packages</attribute>
        <attribute name="action">win.refresh-dbs</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">About</attribute>
        <attribute name="action">win.show-about</attribute>
      </item>
    </section>
  </menu>

  <!--// SEARCH MENU //-->
  <menu id="search_menu">
    <section>
      <attribute name="label">Search By</attribute>
      <item>
        <attribute name="label">Name</attribute>
        <attribute name="action">win.search-toggle-name</attribute>
      </item>
      <item>
        <attribute name="label">Description</attribute>
        <attribute name="action">win.search-toggle-desc</attribute>
      </item>
      <item>
        <attribute name="label">Dependencies</attribute>
        <attribute name="action">win.search-toggle-deps</attribute>
      </item>
      <item>
        <attribute name="label">Optional Dependencies</attribute>
        <attribute name="action">win.search-toggle-optdeps</attribute>
      </item>
    </section>
  </menu>
</interface>
