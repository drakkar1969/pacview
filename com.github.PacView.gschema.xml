<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <enum id="com.github.PacView.SearchMode">
    <value nick="all" value="0"/>
    <value nick="any" value="1"/>
    <value nick="exact" value="2"/>
  </enum>

  <enum id="com.github.PacView.SearchProp">
    <value nick="name" value="0"/>
    <value nick="name-desc" value="1"/>
    <value nick="group" value="2"/>
    <value nick="deps" value="3"/>
    <value nick="optdeps" value="4"/>
    <value nick="provides" value="5"/>
    <value nick="files" value="6"/>
  </enum>

  <enum id="com.github.PacView.PackageSort">
    <value nick="name" value="0"/>
    <value nick="version" value="1"/>
    <value nick="repository" value="2"/>
    <value nick="status" value="3"/>
    <value nick="install-date" value="4"/>
    <value nick="installed-size" value="5"/>
    <value nick="groups" value="6"/>
  </enum>

  <schema id="com.github.PacView" path="/com/github/PacView/">
    <key name="aur-update-command" type="s">
      <default>''</default>
    </key>
    <key name="auto-refresh" type="b">
      <default>true</default>
    </key>
    <key name="remember-sorting" type="b">
      <default>false</default>
    </key>
    <key name="search-delay" type="d">
      <range min="0" max="2000"/>
      <default>150</default>
    </key>
    <key name="search-mode" enum='com.github.PacView.SearchMode'>
      <default>'all'</default>
    </key>
    <key name="search-prop" enum='com.github.PacView.SearchProp'>
      <default>'name'</default>
    </key>
    <key name="sort-ascending" type="b">
      <default>true</default>
    </key>
    <key name="sort-field" enum='com.github.PacView.PackageSort'>
      <default>'name'</default>
    </key>
    <key name="window-height" type="i">
      <default>840</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="window-width" type="i">
      <default>1400</default>
    </key>
  </schema>
</schemalist>
